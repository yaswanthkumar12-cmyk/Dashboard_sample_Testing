# ===============================
# General repository settings
# ===============================
REPO_NAME=Dashboard_sample_Testing
REPO_OWNER=yaswanthkumar12-cmyk
GITHUB_TOKEN=${{ secrets.GITHUB_TOKEN }}  # Automatically provided by GitHub Actions
BRANCH=main  # default branch to scan

# ===============================
# Gitleaks configuration
# ===============================
GITLEAKS_CONFIG=.gitleaks.toml  # optional; if not provided, default rules are used
GITLEAKS_OUTPUT=gitleaks-results.sarif.zip
GITLEAKS_FORMAT=sarif  # can be json, csv, sarif, etc.
GITLEAKS_COMMIT_RANGE=HEAD~10..HEAD  # scan last 10 commits

# ===============================
# Security / scanning options
# ===============================
SCAN_SUBMODULES=true   # set to true if your repo uses git submodules
ALLOW_PRIVATE_KEYS=false  # block private keys in repo
ALLOW_API_KEYS=false      # block API keys in repo

# ===============================
# Logging / debug
# ===============================
DEBUG=true
LOG_LEVEL=DBG  # options: DBG, INF, WARN, ERR
